<h2>All tasks</h2>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Score</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each_with_index do |task, index| %>
      <tr>
        <th scope="row"><%= index+1 %></th>
        <td><%= link_to task.title, task_path(task) %></td>
        <td><%= task.score %></td>
        <td><%= link_to "edit", edit_task_path(task) %></td>
        <td><%= link_to "delete", task_path(task), method: "delete", data: {confirm: "Do you really want to delete #{task.title}"}%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Task", new_task_path, class: "btn btn-primary" %>