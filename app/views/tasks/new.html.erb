<h1>New Task</h1>
<%= form_for @task do |f| %>
  <fieldset class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control"  %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :score %>
    <%= f.text_field :score, type: "number", class: "form-control"  %>
  </fieldset>

  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>